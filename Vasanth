import java.util.ArrayList;
import java.util.Scanner;

public class Main
{
	public static void main(String[] args) {
	Scanner sc=new Scanner(System.in);
        int a=sc.nextInt();
        int b=0;
        int c=a;
        for(int i=0;i<c;i++)
        {
        for(int j=0;j<c;j++)
        {
        System.out.print(a);
        if(i>0&&b<i)
        {
        a--;
        b++;
        }
        }
        b=0;
        System.out.println();
        a=c;
        }
	}
}
